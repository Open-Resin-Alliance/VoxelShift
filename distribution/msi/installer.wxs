<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
  xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package
    Name="$(var.ProductName)"
    Version="$(var.ProductVersion)"
    Manufacturer="$(var.Manufacturer)"
    UpgradeCode="$(var.UpgradeCode)"
    Language="1033">

    <SummaryInformation Description="$(var.ProductName)" />
    <MajorUpgrade DowngradeErrorMessage="A newer version of $(var.ProductName) is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <WixVariable Id="WixUIBannerBmp" Value="assets/ora_banner.png" />
    <WixVariable Id="WixUIDialogBmp" Value="assets/ora_dialog.png" />
    <WixVariable Id="WixUILicenseRtf" Value="assets/license.rtf" />


    <StandardDirectory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="$(var.ProductName)" />
    </StandardDirectory>
    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="$(var.ProductName)" />
    </StandardDirectory>

    <Component Id="InstallDirRegistry" Guid="*" Directory="INSTALLFOLDER">
      <RegistryValue
        Root="HKLM"
        Key="Software\$(var.Manufacturer)\$(var.ProductName)"
        Name="InstallDir"
        Value="[INSTALLFOLDER]"
        Type="string"
        KeyPath="yes" />
    </Component>

    <Component Id="AppShortcut" Guid="*" Directory="ApplicationProgramsFolder">
      <Shortcut
        Id="StartMenuShortcut"
        Name="$(var.ProductName)"
        Description="$(var.ProductName)"
        Target="[INSTALLFOLDER]voxelshift.exe"
        WorkingDirectory="INSTALLFOLDER" />
      <Shortcut
        Id="OpenInstallFolder"
        Name="Open Install Folder"
        Description="Open the VoxelShift install directory"
        Target="[SystemFolder]explorer.exe"
        Arguments="[INSTALLFOLDER]"
        WorkingDirectory="INSTALLFOLDER" />
      <RemoveFolder Id="CleanStartMenu" Directory="ApplicationProgramsFolder" On="uninstall" />
      <RegistryValue Root="HKCU" Key="Software\$(var.Manufacturer)\$(var.ProductName)" Name="installed" Type="integer" Value="1" KeyPath="yes" />
    </Component>

    <Feature Id="MainFeature" Title="$(var.ProductName)" Level="1">
      <ComponentRef Id="AppShortcut" />
      <ComponentRef Id="InstallDirRegistry" />
      <ComponentGroupRef Id="AppFiles" />
    </Feature>

    <ui:WixUI Id="WixUI_InstallDir" InstallDirectory="INSTALLFOLDER" />

  </Package>
</Wix>
